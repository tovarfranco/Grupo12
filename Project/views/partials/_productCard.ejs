<article class="articulo" onclick="window.location='/products/detail/<%= product.id_product %>'">
    <div class="articulo-imagen"><img src="/images/products/<%= product.image %>" alt=<%= product.name %>></div>
    <hr>
    <div class="articulo-descripcion">
        <h3 class="texto-titulo-articulo"><%= product.brand %></h3>
        <h4 class="texto-descripcion-articulo"><%= product.name %></h4>
        <h3 class="texto-precio-articulo">U$S <%= product.price %></h3>
    </div>
</article>