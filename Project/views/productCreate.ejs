<!DOCTYPE html>
<html lang="en">
    <head>
        <!--headPart-->
        <%- include('./partials/_headPart') %>
        <!--/headPart-->
        <!--Mi hoja de estilos-->
        <link rel="stylesheet" href="/css/crud.css">
    </head>
    <body>

        <!--header-->
        <%- include('./partials/_header') %>
        <!--/header-->

        <main>

            <section class="crud">
                
                <h2 class="texto-crud">CREACION DE PRODUCTOS</h2>
                <hr>
                <form action="/products/create" method="POST" class="formulario" enctype="multipart/form-data"> <!--enctype para subir imagenes. SI O SI usar Multer sino no viaja la info-->
                    <h3 class="texto-formulario">Cree su producto</h3>
                    <div class="container-inputs">
                        <div class="inputs-1">
                            <div class="elemento">
                                <label>Nombre</label>
                                <input type="text" name="nombre" class="control" placeholder="Nombre">
                            </div>
                            <div class="elemento">
                                <label>Descripción</label>
                                <input type="text" name="descripcion" class="control" placeholder="Descripción">
                            </div>
                            <div class="elemento">
                                <label>Precio</label>
                                <input type="number" name="precio" class="control" placeholder="0.00 (punto o coma)" step="0.01">
                            </div>
                        </div>
                        <div class="inputs-2">
                            <div class="elemento">
                                <label>Marca</label>
                                <input type="text" name="marca" class="control" placeholder="Marca">
                            </div>
                            <div class="elemento">
                                <label>Modelo</label>
                                <input type="text" name="modelo" class="control" placeholder="Modelo">
                            </div>
                            <div class="elemento">
                                <label>Categoría</label>
                                <select name="categoria" class="control" required>
                                    <option value="" disabled selected hidden>Seleccione la categoría</option>
                                <% categoryList.forEach(category => { %>
                                    <option value="<%= category.id_category %>"><%= category.name %></option>
                                <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="inputs-3">
                            <div class="elemento">
                                <label>Color</label>
                                <input type="text" name="color" class="control" placeholder="Color">
                            </div>
                            <div class="elemento">
                                <label>Material</label>
                                <input type="text" name="material" class="control" placeholder="Material">
                            </div>
                            <div class="elemento">
                                <label>Origen</label>
                                <input type="text" name="origen" class="control" placeholder="Origen">
                            </div>
                        </div>
                        <div class="inputs-4">
                            <div class="elemento">
                                <label>Año</label>
                                <input type="number" name="anio" class="control" placeholder="Año">
                            </div>
                            <div class="elemento">
                                <label>Disponibilidad</label>
                                <select name="disponibilidad" class="control" required>
                                    <option value="" disabled selected hidden>Disponibilidad</option>
                                    <option value="En Stock">En STOCK</option>
                                    <option value="Sin Stock">Sin STOCK</option>
                                </select>
                            </div>
                            <div class="elemento">
                                <label>Imagen</label>
                                <input type="file" name="img" class="control" accept=".jpg, .png">
                            </div>
                        </div>
                        <div class="inputs-5">
                            <div class="elemento">
                                <label>Campaña</label>
                                <select name="campania" class="control" required>
                                    <option value="" disabled selected hidden>Campaña</option>
                                <% campaignList.forEach(campaign => { %>
                                    <option value="<%= campaign.id_campaign %>"><%= campaign.name %></option>
                                <% }); %>
                                </select>
                            </div>
                        </div>
                    <div><button class="boton-crear" type="submit">Crear</button></div>
                </form>

            </section>

        </main>

        <!--footer-->
        <%- include('./partials/_footer') %>
        <!--/footer-->
        
    </body>
</html>