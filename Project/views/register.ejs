<!DOCTYPE html>
<html lang="en">
    <head>
        <!--headPart-->
        <%- include('./partials/_headPart') %>
        <!--/headPart-->
        <!--Mi hoja de estilos-->
        <link rel="stylesheet" href="/css/register.css">
    </head>
    <body>

        <!--header-->
        <%- include('./partials/_header') %>
        <!--/header-->

        <main>

            <section class="registro">
                
                <h2 class="texto-registro">REGISTRO</h2>
                <hr>
                <form action="/register" method="POST" class="formulario">
                    <h3 class="texto-formulario">Cree su cuenta</h3>
                    <div class="container-inputs">
                        <div class="inputs-1">
                            <div class="elemento">
                                <input type="text" name="nombre" class="control" placeholder="Nombre">
                            </div>
                            <div class="elemento">
                                <input type="text" name="apellido" class="control" placeholder="Apellido">
                            </div>
                            <div class="elemento">
                                <input type="number" name="dni" class="control" placeholder="DNI">
                            </div>
                        </div>
                        <div class="inputs-2">
                            <div class="elemento">
                                <select name="pais" class="control" required>
                                    <option value="" disabled selected hidden>Seleccione su país</option>
                                    <option value="ARG">Argentina</option>
                                    <option value="BRA">Brasil</option>
                                    <option value="COL">Colombia</option>
                                </select>
                            </div>
                            <div class="elemento">
                                <input type="text" name="domicilio" class="control" placeholder="Domicilio">
                            </div>
                            <div class="elemento">
                                <input type="date" name="nacimiento" class="control" placeholder="Fecha nacimiento">
                            </div>
                        </div>
                        <div class="inputs-3">
                            <div class="elemento">
                                <input type="file" name="img" class="control" accept=".jpg, .png">
                            </div>
                            <div class="elemento">
                                <input type="email" name="email" class="control" placeholder="E-mail">
                            </div>
                            <div class="elemento">
                                <input type="password" name="password" class="control" placeholder="Contraseña">
                            </div>
                        </div>
                    </div>
                    <div class="terminos-condiciones">
                        <label><input type="checkbox" name="terminos">Acepto los términos y condiciones</label>
                    </div>
                    <div><button class="boton-registrarse-formulario" type="button" onclick="window.location='/register'">Registrarse</button></div>
                    <h3 class="texto-tenes-cuenta">¿Ya tenes cuenta?</h3>
                    <div><button class="boton-iniciar-sesion-formulario" type="button" onclick="window.location='/login'">Iniciar sesión</button></div>
                </form>

            </section>

        </main>

        <!--footer-->
        <%- include('./partials/_footer') %>
        <!--/footer-->
        
    </body>
</html>